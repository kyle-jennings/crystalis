{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "noImplicitThis": false,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "resolveJsonModule": true,

    "types": [
      "webpack-env"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "typeRoots": [
      "@types",
      "node_modules/@types",
      "node_modules/**/@types",
      "src/types",
    ],
    "paths": {
      "@/*": ["src/*"],
      "@game/*": ["src/game/*"],
    },
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.vue",
    "**/*.json",
    "**/*.js",
  ],
  "exclude": [
    "node_modules",
    "ts-exclude",
    "**/vendor/*.js",
    "**/node_modules/**/*",
    "**/dist",
  ]
}
